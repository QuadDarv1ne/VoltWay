# Database Configuration
DATABASE_URL=sqlite:///./voltway.db
# For PostgreSQL: postgresql://user:password@localhost/voltway

# PostgreSQL Configuration (for Docker)
POSTGRES_DB=voltway
POSTGRES_USER=voltway_user
POSTGRES_PASSWORD=change-this-to-a-secure-password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# External APIs
OPEN_CHARGE_MAP_API_KEY=your_api_key_here
API_NINJAS_KEY=your_api_key_here

# Security
# Generate a secure key with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key-at-least-32-chars-long

# Environment
DEBUG=false

# Sentry for error tracking (optional)
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# CORS (production)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000