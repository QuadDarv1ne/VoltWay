# Application
APP_NAME=VoltWay
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./voltway.db
# For PostgreSQL:
# DATABASE_URL=postgresql://voltway_user:voltway_password@localhost:5432/voltway

# PostgreSQL (for Docker)
POSTGRES_DB=voltway
POSTGRES_USER=voltway_user
POSTGRES_PASSWORD=voltway_password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=true

# External APIs
OPEN_CHARGE_MAP_API_KEY=your_api_key_here
API_NINJAS_KEY=your_api_key_here

# Security
SECRET_KEY=your-secret-key-min-32-chars-long-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8000

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_MINIMUM_SIZE=500

# Monitoring
SENTRY_DSN=

# HTTPS (production only)
HTTPS_REDIRECT=false
