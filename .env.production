# Production environment configuration for VoltWay

# Database Configuration
DATABASE_URL=postgresql://voltway:secure_password@db:5432/voltway
# For development: sqlite:///./voltway.db
# For async: postgresql+asyncpg://user:pass@localhost/voltway

# Redis Configuration
REDIS_URL=redis://redis:6379

# External APIs
OPEN_CHARGE_MAP_API_KEY=your_api_key_here
API_NINJAS_KEY=your_api_key_here

# Security
SECRET_KEY=your-super-secret-key-change-in-production-PLEASE
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
DEBUG=false

# Sentry for error tracking
SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# Database password (for docker-compose)
DB_PASSWORD=secure_password
